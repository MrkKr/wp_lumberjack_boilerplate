<!DOCTYPE html>
<html {{ site.language_attributes }}>

    {% include 'html-header.twig' %}

    <body class="{{ body_class }}">
        <header id="header">
            <nav class="navbar navbar-expand-lg navbar-light mt-3 mb-0 bg-white" role="navigation">
                <div class="container">
                    <div class="navbar-brand mb-0"><a rel="home" href="{{ site.url }}" title="{{ site.name }}"><img src="{{ theme.parent.path }}/assets/img/logo.png" class="logo" alt="" /></a></div>

                    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
    
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul id="header-menu" class="nav navbar-nav mr-auto">
                            {% for item in menu.items %}
                                {% if item.children %}
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{item.title}} <span class="caret"></span></a>
                                        <ul class="dropdown-menu" role="menu">
                                            {% for child in item.children %}
                                                <li class="nav-item {{ child.classes|join(' ') }}">
                                                    <a href="{{ child.link }}" class="dropdown-item nav-link">
                                                        <span data-letters="{{child.title}}">{{child.title}}</span>
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% else %}
                                    <li class="nav-main-item {{ item.classes|join(' ') }}">
                                        <a class="nav-link" href="{{ item.link }}">
                                            <span data-letters="{{item.title}}">{{item.title}}</span>
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                    
                </div>
            </nav>
        </header>

        {% block content %}
            <p>Sorry, no content</p>
        {% endblock %}

        {% include 'html-footer.twig' %}
    </body>
</html>
